extends ../layout

block content
    h1 #{title}
    hr
    p Proveedores de nuestra tienda
    table(class='table table-striped table-hover')
        thead(class='thead-inverse')
            tr
                th #
                th Nombre
                th Apellido(s)
                th Empresa
                th Correo
                th Numero
                th
        tbody
            each supplier in suppliers
                tr
                    th(scope="row") #{supplier._id}
                    td #{supplier.name}
                    td #{supplier.lastName}
                    td #{supplier.company}
                    td #{supplier.email}
                    td #{supplier.phone}

                    td
                        button(class='btn btn-primary btn-sm')
                            span(class='fa fa-pencil')
                        button(class='btn btn-danger btn-sm')
                            span(class='fa fa-trash')
