extends ../layout

block content
    h1 Clientes
    hr
    p Clientes de nuestra tienda
    table(class='table table-striped table-hover')
        thead(class='thead-inverse')
            tr
                th #
                th Nombre
                th Apellido
                th Direccion
                th Email
                th Telefono
                th
        tbody
            each client in clients
                tr
                    th(scope="row") #{client._id}
                    td #{client.name}
                    td #{client.lastName}
                    td #{client.address}
                    td #{client.email}
                    td #{client.phone}

                    td
                        button(class='btn btn-primary btn-sm')
                            span(class='fa fa-pencil')
                        button(class='btn btn-danger btn-sm')
                            span(class='fa fa-trash')

